pipeline {
    agent {
        label 'general'
    }

    triggers {
        githubPush()   // trigger the pipeline upon push event in GitHub
    }

    stages {
        stage('terraform init') {
            steps {
                script {
                    sh '''
                      terraform init
                    '''
                }
            }
        }

        stage('terraform plan') {
            steps {
                script {
                    sh """
                     terraform plan -var-file region.eu-north-1.dev.ftvars
                    """
                }
            }
        }
        }
    }
}

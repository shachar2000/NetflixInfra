pipeline {
    agent any // או agent { label 'built-in' }

    triggers {
        githubPush()
    }

    stages {

        stage('Terraform Init') {
            steps {
                script {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    sh 'terraform plan -var-file=region.eu-north-1.dev.ftvars'
                }
            }
        }

       
    }
}
